{
    "env": {
        "es6": true,
        "node": true
    },

    "extends": "eslint:recommended",

    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },

    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },

    "rules": {
        "indent": ["error", 2],
        "camelcase": "error",
        "semi": "error",
        "linebreak-style": ["error", "unix"],
        "comma-spacing": ["error", { "before": false, "after": true }],

        "no-console": "warn",
        "quotes": ["warn", "single"],

        "strict": "off"
    }
}
